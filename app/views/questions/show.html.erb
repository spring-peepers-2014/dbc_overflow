<h1><%= @question.name %></h1>

<p><%= @question.body %></p>


<%= link_to 'add comment to question', 'c' %>
<p><%= link_to "Edit This Question", add_comment_question(@question), remote: true %></p>

<h2>Answers</h2>

<% @answers.each do |answer| %>
  <p><%= answer.body %></p>
  <p><%= link_to("Edit This Answer", edit_question_answer_path(@question, answer)) %>
<% end %>

<%= render 'answers/form' %>
<%= render 'questions/comment' %>




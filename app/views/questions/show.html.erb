<h1><%= @question.name %></h1>
<hr />

<p id="question_body"><%= @question.body %></p>

<% if @question.user.id == session[:user_id] %>
<%= link_to 'add comment to question', new_comment_question_path(@question), remote: true  %><br>
<div id="edit_question"><%= link_to("Edit This Question", edit_question_path(@question)) %></div><br>
<% end %>
<div id="asked_by">asked by <%= link_to(@question.user.name, user_path(@question.user)) %> on <%= (@question.created_at).strftime("%b %d '%y") %></div>
<hr />

<h4>Answers</h4>
<hr />

<% @answers.each do |answer| %>
  <p><%= answer.body %></p>
  <% if answer.user.id == session[:user_id] %>
    <p id="edit_answer"><%= link_to("Edit This Answer", edit_question_answer_path(@question, answer)) %></p>
  answered by <%= link_to(@question.user.name, user_path(@question.user)) %> on <%= (@question.created_at).strftime("%b %d '%y") %><br>
  <div id="add_comment"><%= link_to 'add comment to question', new_comment_question_answer_path(@question, answer), remote: true  %></div>
  <hr />
  <% end %>
<% end %>


<% if session[:user_id] %>
  <%= render 'answers/form' %>
  <% else %>
  <h4>Please <%= link_to 'login', user_login_path %> to submit an answer  </h4>
<% end %>




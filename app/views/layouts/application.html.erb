<!DOCTYPE html>
<html>
<head>
  <title>DbcOverflow</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "normalize", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="main-nav">

    <h1 class="logo"><a href="/"><span id="dbc">dbc</span><span id="overflow">Overflow</a></span></h1>
    <div class="nav_links">
      <ul>
        <% unless session[:user_id] %>
        <li><%= link_to 'signup', new_user_path %></li>
        <li><%=link_to 'login', user_login_path %></li>
        <% else %>
        <li><%= link_to 'your profile', user_path(session[:user_id]) %></li>
        <li><%= link_to 'signout', user_logout_path %></li>
        <% end %>
      </ul>
    </div>
  </div>

    <div class="child_nav">
      <h1 class="logo-larger"><a href="/"><span id="dbc">dbc</span><span id="overflow">Overflow</a></span></h1>
      <ul>
        <li id="nav-questions"><%= link_to 'Questions', questions_path %></li>
        <li id="nav-tags"><%= link_to 'Tags', tags_path %></li>
        <li id="nav-users"><%= link_to 'Users', users_path %></li>
        <li id="nav-ask"><%= link_to 'Ask Question', new_question_path %></li>
      </ul>
        <hr />
    </div>

 <div class="container">

    <div id="login_div">

    </div>
  <%= yield %>
  <div class="container">
    <%= params.inspect %><br>
    User id is:<%= session[:user_id].inspect %>
  </div>
</div>

</body>
</html>
